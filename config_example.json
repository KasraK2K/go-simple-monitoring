{
  "path": "./logs",
  "refresh_time": "5s",
  "storage": "both",
  "logrotate": {
    "enabled": true,
    "max_age_days": 30
  },
  "heartbeat": [
    {
      "name": "Google",
      "url": "https://www.google.com",
      "timeout": 5
    },
    {
      "name": "GitHub API",
      "url": "https://api.github.com",
      "timeout": 5
    },
    {
      "name": "Local API Health",
      "url": "http://localhost:8080/health",
      "timeout": 3
    },
    {
      "name": "Example API",
      "url": "https://httpbin.org/status/200",
      "timeout": 10
    }
  ],
  "servers": [
    {
      "name": "Production",
      "address": "https://monitoring.example.com"
    },
    {
      "name": "Staging",
      "address": "https://staging-monitor.example.com"
    }
  ]
}
