{
  "path": "./logs",
  "refresh_time": "5s",
  "storage": "both",
  "persist_server_logs": false,
  "logrotate": {
    "enabled": true,
    "max_age_days": 30
  },
  "heartbeat": [
    {
      "name": "Google",
      "url": "https://www.google.com",
      "timeout": 5
    },
    {
      "name": "GitHub API",
      "url": "https://api.github.com",
      "timeout": 5
    },
    {
      "name": "Local API Health",
      "url": "http://localhost:8080/health",
      "timeout": 3
    },
    {
      "name": "Example API",
      "url": "https://httpbin.org/status/200",
      "timeout": 10
    }
  ],
  "servers": [
    {
      "name": "Localhost 1000",
      "address": "http://localhost:1000",
      "table_name": "local_monitoring_1000"
    },
    {
      "name": "Localhost 2000",
      "address": "http://localhost:2000",
      "table_name": "local_monitoring_2000"
    }
  ]
}
