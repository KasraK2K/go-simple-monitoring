# Secrets
AES_SECRET=your-aes-secret-here
JWT_SECRET=your-jwt-secret-here

# CORS Configuration - comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3500,http://127.0.0.1:3500

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO

# Token Validation Configuration
CHECK_TOKEN=false

# Dashboard Configuration
HAS_DASHBOARD=false
# Valid options: 1h, 6h, 24h, 7d, 30d. Leave empty to disable the default filter.
DASHBOARD_DEFAULT_RANGE=

# Path Configuration
BASE_LOG_FOLDER=./logs
# SQLite database file path (recommended location under /var/syslogs)
SQLITE_DNS=/var/syslogs/database/sqlite/monitoring.db

# Server Monitoring Configuration
SERVER_MONITORING_TIMEOUT=15s

# Database Configuration
DB_MAX_CONNECTIONS=30
DB_CONNECTION_TIMEOUT=30
DB_IDLE_TIMEOUT=300
POSTGRES_USER=monitoring
POSTGRES_PASSWORD=monitoring
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=monitoring

# Historical Downsampling (PostgreSQL/TimescaleDB)
# Target number of data points for historical queries. Uses TimescaleDB time_bucket when available.
# Set to 0 to disable downsampling. Recommended: 100-500 for good performance/detail balance.
MONITORING_DOWNSAMPLE_MAX_POINTS=150

# Historical Query Storage Selection
# Which database to use for historical queries with date ranges.
# Valid values: "sqlite", "postgresql" (default: postgresql)
# This allows you to use PostgreSQL for historical queries while using SQLite for current data,
# or vice versa, based on your performance and storage requirements.
HISTORICAL_QUERY_STORAGE=postgresql

# Timezone Configuration
# DISABLE_UTC_ENFORCEMENT=false  # Set to true to use local timezone instead of UTC
DEFAULT_TIMEZONE=UTC           # Custom timezone (e.g., America/New_York, Europe/London)
# HTTP Client Configuration
# HTTP_MAX_CONNS_PER_HOST=10      # Maximum connections per host
# HTTP_MAX_IDLE_CONNS=100         # Maximum idle connections total
# HTTP_MAX_IDLE_CONNS_PER_HOST=5  # Maximum idle connections per host
# HTTP_IDLE_CONN_TIMEOUT=90s      # Idle connection timeout
# HTTP_CONNECT_TIMEOUT=10s        # Connection timeout
# HTTP_REQUEST_TIMEOUT=30s        # Overall request timeout
# HTTP_RESPONSE_HEADER_TIMEOUT=10s # Response header timeout
# HTTP_MAX_RESPONSE_SIZE=10485760  # Max response size in bytes (10MB)
# HTTP_TLS_HANDSHAKE_TIMEOUT=10s  # TLS handshake timeout
