# Secrets
AES_SECRET=your-aes-secret-here
JWT_SECRET=your-jwt-secret-here

# CORS Configuration - comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3500,http://127.0.0.1:3500

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO

# Token Validation Configuration
CHECK_TOKEN=false

# Dashboard Configuration
HAS_DASHBOARD=false
# Valid options: 1h, 6h, 24h, 7d, 30d. Leave empty to disable the default filter.
DASHBOARD_DEFAULT_RANGE=24h

# Path Configuration
BASE_LOG_FOLDER=./logs
BASE_DATABASE_FOLDER=./

# Server Monitoring Configuration
SERVER_MONITORING_TIMEOUT=15s

# Database Configuration
DB_MAX_CONNECTIONS=30
DB_CONNECTION_TIMEOUT=30
DB_IDLE_TIMEOUT=300

# Timezone Configuration
# DISABLE_UTC_ENFORCEMENT=false  # Set to true to use local timezone instead of UTC
# DEFAULT_TIMEZONE=UTC           # Custom timezone (e.g., America/New_York, Europe/London)
# HTTP Client Configuration
# HTTP_MAX_CONNS_PER_HOST=10      # Maximum connections per host
# HTTP_MAX_IDLE_CONNS=100         # Maximum idle connections total
# HTTP_MAX_IDLE_CONNS_PER_HOST=5  # Maximum idle connections per host
# HTTP_IDLE_CONN_TIMEOUT=90s      # Idle connection timeout
# HTTP_CONNECT_TIMEOUT=10s        # Connection timeout
# HTTP_REQUEST_TIMEOUT=30s        # Overall request timeout
# HTTP_RESPONSE_HEADER_TIMEOUT=10s # Response header timeout
# HTTP_MAX_RESPONSE_SIZE=10485760  # Max response size in bytes (10MB)
# HTTP_TLS_HANDSHAKE_TIMEOUT=10s  # TLS handshake timeout
